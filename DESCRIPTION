Type: Package
Package: MARCviz
Title: Meta-Analytic Rain Cloud (MARC) Plots
Version: 0.1.0
Authors@R: c(
    person("Kaitlyn", "Fitzgerald", email = "kaitlyn.fitzgerald@villanova.edu", role = c("cre","aut")),
    person("Avery", "Charles", email = "acharles20@apu.edu", role = "aut"),
